
# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/nestjs_boilerplate?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis (optional for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Log (optional)
LOG_LEVEL=info
LOG_DIR=./logs
SERVICE_NAME=nest.js-boilerplate-application

# Swagger (optional)
SWAGGER_SITE_TITLE=
SWAGGER_DOC_TITLE=
SWAGGER_DOC_DESCRIPTION=
SWAGGER_DOC_VERSION=


# Mail (optional)
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USER=postmaster@example.com
MAIL_PASS=supersecure
MAIL_FROM='"My App" <no-reply@example.com>'
MAIL_QUEUE_NAME=mail-queue